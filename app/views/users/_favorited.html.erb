

<% posts.each do |post| %>
<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br/>
      <% avatar_url = post.post.user.avatar_url(48) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= post.post.user.name %></h2>
        <small>

          <%= render partial: 'votes/voter', locals: { post: post.post } %>
          <%= link_to post.post.title, topic_post_path(post.post.topic, post) %>
        </small>
        <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.post.user.name %> <br>
          <%= post.post.comments.count %> Comments
        </small>
      </div>
    </div>
  </div>
</div>
<% end %>
